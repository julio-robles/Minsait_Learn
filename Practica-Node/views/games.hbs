<!DOCTYPE html>
<html>

<head>
  <title>{{title}}</title>
</head>

<body>
    <h1>{{title}}</h1>
    <a href="/">Atras</a>
    <div>
        {{#each games}}
        <a href= "/games/{{this.id}}">
            <div>
                <h3>{{ this.title }}</h3>
                <h3>{{ this.description }}</h3>
                <h3>{{ this.price }}</h3>
                <img src={{ this.image }}></img>
            </div>
        </a>
        {{/each}}
    </div>
</body>

</html>