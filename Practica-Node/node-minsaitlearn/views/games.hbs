<!DOCTYPE html>
<html>

<head>
  <title>{{ title }}</title>
</head>

<body>
    <h1>{{ title }}</h1>
    <a href="/">Atras</a>
    <a href="/games/upload">Subir</a>
    <div>
        {{#each games}}
        <a href= "/games/game/{{this.id}}">
            <div>
                <h3>{{ this.title }}</h3>
                <h3>{{ this.description }}</h3>
                <h3>{{ this.price }}</h3>
                {{#if this.image}}
                    <img src="{{ this.image }}" alt={{this.title}} width="200"></img>
                {{/if}}    
            </div>
        </a>
        {{/each}}
    </div>
    <a href= "/games/next/{{ prev }}">Anterior</a>
    {{#if games}}
        <a href="/games/next/{{ next }}">Siguiente</a>
    {{/if}}

</body>

</html>