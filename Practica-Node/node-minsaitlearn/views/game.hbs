<!DOCTYPE html>
<html>

<head>
  <title>{{ title }}</title>
</head>

<body>
    <h1>El juego con id {{this.id}}</h1>
    {{#if this.game}}
        <h3>{{ this.game.title }}</h3>
        <h3>{{ this.game.description }}</h3>
        <h3>{{ this.game.price }}</h3>
        {{#if this.game.image}}
          <img src="{{ this.game.image }}" alt={{this.game.title}} width="200"></img>
        {{/if}}  
          <form action="/games/game/{{this.game.id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" value="Borrar"></input>
          </form>


    <form action="/games/cart" method="POST">
      <input type="hidden" name="id" value="{{this.id}}">
      <input type="submit" value="AÃ±adir al carrito">
    </form>



	{{else}}
		<h3>No hemos encontrado el juego que buscas!</h3>
    {{/if}}
    <a href="/games">Atras</a>
</body>

</html>